<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feedbackhealthdata.healthcdataf.feedbackActivity">

    <TextView
        android:text="Feed all the data carefully !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:id="@+id/tv31"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <TextView
        android:text="Any specific viral infection or diesese:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/tv33"
        android:textStyle="normal|italic"
        android:textColor="@android:color/black"
        android:layout_below="@+id/et31"
        android:layout_alignStart="@+id/tv32" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et32"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tv33"
        android:layout_alignStart="@+id/et31"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="click here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b31"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/tv32"
        android:layout_marginEnd="13dp"
        android:textColor="@android:color/holo_red_dark"
        android:background="@android:color/background_light" />

    <TextView
        android:text="Press button to feed all case details!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b31"
        android:layout_toStartOf="@+id/b31"
        android:layout_marginBottom="18dp"
        android:id="@+id/tv34"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et31"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv32"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="No. of cases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/tv32"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="normal|italic"
        tools:text="Number of cases handeled this week."
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv31"
        android:layout_alignParentStart="true" />

</RelativeLayout>
